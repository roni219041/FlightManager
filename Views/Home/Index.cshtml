
@{
    ViewData["Title"] = "HomePage";
}
<div>
    <div class="text-center">
        <h1 class="display-2">Welcome</h1>
    </div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/airplane1.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h4>Create reservation</h4>
                    <p>Reserve your flight without having to sign up</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/ticket1.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h4>Email confirmation</h4>
                    <p>Receive an email when your reservation is completed and go pack your luggage</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/inside airplane1.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h4>Manage flights</h4>
                    <p>Employees can take a look of all passengers on board and get all the needed information about the flight</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
